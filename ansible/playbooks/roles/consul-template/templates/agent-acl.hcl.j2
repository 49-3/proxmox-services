## ACL configuration
acl = {
  enabled = true
  default_policy = "deny"
  enable_token_persistence = true
  enable_token_replication = true
  down_policy = "extend-cache"
  tokens {
    agent = "{{ hostvars[inventory_hostname]['consul_agent_token'] }}"
  }
}