pid_file = "/var/run/vault-agent.pid"

auto_auth {
  method "approle" {
    mount_path = "auth/approle"
    config = {
      role_id_file_path = "{{ role_id_file_path }}"
      secret_id_file_path = "{{ secret_id_file_path }}"
      remove_secret_id_file_after_reading = false
    }
  }

  sink "file" {
    config = {
      path = "{{ sink_path }}"
    }
  }
}

cache {
  use_auto_auth_token = true
}

template_config {
  static_secret_render_interval = "10m"
  exit_on_retry_failure = true
  max_connections_per_host = 20
}

template {
  source      = "{{ vault_agent_templates_dir }}/consul-cert.ctmpl"
  destination = "{{ consul_tls_directory }}/{{ consul_tls_cert_file }}"
  perms       = 0750
  command     = "chown -R root:consul {{ consul_tls_directory }}/*; systemctl reload consul; systemctl reload vault-agent.service;"
}

template {
  source      = "{{ vault_agent_templates_dir }}/consul-key.ctmpl"
  destination = "{{ consul_tls_directory }}/{{ consul_tls_key_file }}"
  perms       = 0750
  command     = "chown -R root:consul {{ consul_tls_directory }}/*; systemctl reload consul; systemctl reload vault-agent.service;"
}

template {
  source      = "{{ vault_agent_templates_dir }}/consul-ca.ctmpl"
  destination = "{{ consul_tls_directory }}/{{ consul_tls_ca_file }}"
  perms       = 0750
  command     = "chown -R root:consul {{ consul_tls_directory }}/*; systemctl reload consul; systemctl reload vault-agent.service;"
}