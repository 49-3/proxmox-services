[Unit]
Description=Vault Agent
After=network.target

[Service]
User=root
Group=root
Environment="VAULT_ADDR=https://{{ vault_principal_addr }}"
Environment="VAULT_CACERT={{ consul_tls_directory }}/{{ consul_tls_ca_file }}"
ExecStart=/usr/bin/vault agent -config={{ vault_agent_dir }}
Restart=on-failure

[Install]
WantedBy=multi-user.target