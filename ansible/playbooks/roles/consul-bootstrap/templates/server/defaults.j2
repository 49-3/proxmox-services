# Put here options for consul server start
#
CONSUL_CONFIG_DIR="{{ consul_config_dir }}"

CONSUL_CONFIG_FILE="{{ consul_config_file }}"

CONSUL_ENV_FILE="{{ consul_env_file }}"

CONSUL_CONF_DIR="-config-dir={{ consul_config_dir }}"

CONSUL_BIND="-bind={{ ansible_default_ipv4.address }} -client=0.0.0.0"

CONSUL_EXPECT="-bootstrap-expect={{ consul_ansible_bootstrap_group|length }}"

CONSUL_DATA_DIR="-data-dir={{ consul_data_dir }}"

