## ACL configuration
acl = {
  enabled = true
  # default_policy = "allow"
  default_policy = "deny"
  enable_token_persistence = true
  enable_token_replication = true
  down_policy = "extend-cache"
  tokens {
    default = "{{ hostvars[inventory_hostname]['agent_token_fact'] }}"
  }
}